// Schema simplificado para Vercel
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(COMMON)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  COMMON
  ADMIN
}